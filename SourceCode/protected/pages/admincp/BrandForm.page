<%@ MasterClass="Application.shared.AdminMaster" Theme="general" %>
<com:TContent ID="title">
	Administration :: Brand Manager
</com:TContent>
<com:TContent ID="content">
	<table border="0" cellpadding="0" cellspacing="0" width="100%" height="100%">
		<tr>
			<td class="left_col" style="background:#2e2e2e;">
				<com:Application.shared.CalendarPane />
				<com:Application.shared.AdminLeftMenu />
				<com:Application.shared.StatisticsPane />
			</td>	
			<td class="main_col">
				<com:Application.shared.AdminNotice ID="Notice" />
				<!-- Form sample-->
				<com:TPanel ID="mainBox" CssClass="main_box">
					<div class="title">
						<div>
							<div><h2><com:TLabel ID="lblHeader" /></h2></div>
						</div>
					</div>
					<div class="content">
						<div class="field">
							<div class="text">Name<span>*</span></div>
							<div class="control">
								<com:TTextBox ID="txtName" CssClass="textbox" />
								<com:TRequiredFieldValidator ID="val1"
									ControlToValidate="txtName"
									ErrorMessage="<%= $this->Application->getModule('message')->translate('ITEM_REQUIRED','Brand name') %>"
									Display="Dynamic"
									FocusOnError="True"/>
								<com:TCustomValidator ID="val2"
									ControlToValidate="txtName"
									OnServerValidate="uniqueCheck_ServerValidated"
									ErrorMessage="<%= $this->Application->getModule('message')->translate('ITEM_EXISTS','Brand name') %>"
									Display="Dynamic"/>
							</div>
						</div>
						<div class="field">
							<div class="text">Alias</div>
							<div class="control">
								<com:TTextBox ID="txtAlias" CssClass="textbox" />
								<%= $this->Application->getModule('message')->translate('AUTO_FIELD') %>
							</div>
						</div>
						<div class="field">
							<div class="text">&nbsp;</div>
							<div class="control">
								<com:TButton ID="btnSubmit" CssClass="btn_addnew" OnClick="btnSubmit_Clicked" />
								<com:TButton CausesValidation="false" ButtonType="Reset" CssClass="btn_edit" />
								<com:TButton CausesValidation="false" ButtonType="Button" CssClass="btn_delete" Attributes.onclick="if(!confirm('<%= $this->Application->getModule('message')->translate('CANCEL_CONFIRM') %>')) return false; else document.location.href = '<%= $this->Service->ConstructUrl('admincp.BrandManager') %>'" />
							</div>
						</div>
					</div>
				</com:TPanel>
				<!-- Form sample: END -->
			</td>
		</tr>
	</table>
</com:TContent>
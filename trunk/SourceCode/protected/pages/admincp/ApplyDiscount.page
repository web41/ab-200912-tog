<%@ MasterClass="Application.shared.AdminMaster" Theme="general" %>
<com:TContent ID="title">
	Administration :: Apply Discount
</com:TContent>
<com:TContent ID="content">
	<table border="0" cellpadding="0" cellspacing="0" width="100%" height="100%">
		<tr>
			<td class="left_col" style="background:#2e2e2e;">
				<com:Application.shared.CalendarPane />
				<com:Application.shared.AdminLeftMenu />
				<com:Application.shared.StatisticsPane />
			</td>	
			<td class="main_col">
				<com:Application.shared.AdminNotice ID="Notice" />
				<!-- Form sample-->
				<com:TPanel ID="mainBox" CssClass="main_box">
					<div class="title">
						<div>
							<div><h2><com:TLabel ID="lblHeader" /></h2></div>
						</div>
					</div>
					<div class="content">
						<table border="0" cellpadding="0" cellspacing="0" class="form" width="100%" style="margin-bottom:10px;">
							<tr>
								<td class="field">
									<div class="text">Discount</div>
									<div class="control">
										<com:TDropDownList ID="cboDiscountSelector"
											PromptText="None"
											PromptValue="0"
											DataTextField="Name"
											DataValueField="ID" />
									</div>
								</td>
								<td class="field">
									<div class="text">
										<com:TRadioButton ID="radApplyToProduct" Text="Apply to product" GroupName="ApplyTo" />
									</div>
									<div class="control">
										<com:TListBox ID="listProduct"
											Width="206px" Height="200px"
											SelectionMode="Multiple"
											DataTextField="Name"
											DataValueField="ID" />
									</div>
								</td>
							</tr>
							<tr>
								<td class="field">&nbsp;</td>
								<td class="field">
									<div class="text">
										<com:TRadioButton ID="radApplyToBrand" Text="Apply to brand" GroupName="ApplyTo" />
									</div>
									<div class="control">
										<com:TListBox ID="listBrand"
											Width="206px" Height="200px"
											SelectionMode="Multiple"
											DataTextField="Name"
											DataValueField="ID" />
									</div>
								</td>
							</tr>
							<tr>
								<td class="field">&nbsp;</td>
								<td class="field">
									<div class="text">
										<com:TRadioButton ID="radApplyToCategory" Text="Apply to category" GroupName="ApplyTo" />
									</div>
									<div class="control">
										<com:TListBox ID="listCategory"
											Width="206px" Height="200px"
											SelectionMode="Multiple"
											DataTextField="Name"
											DataValueField="ID" />
									</div>
								</td>
							</tr>
						</table>
						<div class="field" style="border:none;margin-bottom:0;">
							<div class="text">&nbsp;</div>
							<div class="control">
								<com:TButton ID="btnSubmit" CssClass="btn_edit" OnClick="btnSubmit_Clicked" />
								<com:TButton CausesValidation="false" ButtonType="Reset" CssClass="btn_reset" />
								<com:TButton CausesValidation="false" ButtonType="Button" CssClass="btn_cancel" Attributes.onclick="if(!confirm('<%= $this->Application->getModule('message')->translate('CANCEL_CONFIRM') %>')) return false; else document.location.href = '<%= $this->Service->ConstructUrl('admincp.ManufacturerManager') %>'" />
							</div>
						</div>
					</div>
				</com:TPanel>
				<!-- Form sample: END -->
			</td>
		</tr>
	</table>
</com:TContent>
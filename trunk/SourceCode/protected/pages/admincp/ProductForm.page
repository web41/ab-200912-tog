<%@ MasterClass="Application.shared.AdminMaster" Theme="general" %>
<com:TContent ID="title">
	Administration :: Add/Update Product
</com:TContent>
<com:TContent ID="content">
	<table border="0" cellpadding="0" cellspacing="0" width="100%" height="100%">
		<tr>
			<td class="left_col" style="background:#2e2e2e;">
				<com:Application.shared.CalendarPane />
				<com:Application.shared.AdminLeftMenu />
				<com:Application.shared.StatisticsPane />
			</td>	
			<td class="main_col">
				<com:Application.shared.AdminNotice ID="Notice" />
				<!-- Form sample-->
				<com:TPanel ID="mainBox" CssClass="main_box">
					<div class="title">
						<div>
							<div><h2><com:TLabel ID="lblHeader" /></h2></div>
						</div>
					</div>
					<div class="content">
						<table border="0" cellpadding="0" cellspacing="0" class="form" width="100%" style="margin-bottom:10px;">
                        	<tr>
                            	<td class="field nopadding">
                                	<div class="text">SKU<span>*</span></div>
                                    <div class="control">
                                        <com:TTextBox ID="txtSKU" CssClass="textbox" /><br />
                                        <com:TRequiredFieldValidator ID="val1"
                                            CssClass="error"
                                            ControlToValidate="txtSKU"
                                            ErrorMessage="<%= $this->Application->getModule('message')->translate('ITEM_REQUIRED','Product SKU') %>"
                                            Display="Dynamic"
                                            FocusOnError="True"/>
										<com:TCustomValidator ID="val2"
											CssClass="error"
											ControlToValidate="txtSKU"
											OnServerValidate="uniqueCheck2_ServerValidated"
											ErrorMessage="<%= $this->Application->getModule('message')->translate('ITEM_EXISTS','Product SKU') %>"
											Display="Dynamic"
											FocusOnError="True"/>
                                    </div>
                                </td>
                                <td class="field nopadding">&nbsp;</td>
                            </tr>
							<tr>
								<td class="field">
									<div class="text">Name<span>*</span></div>
									<div class="control">
										<com:TTextBox ID="txtName" CssClass="textbox" /><br />
										<com:TRequiredFieldValidator ID="val3"
											CssClass="error"
											ControlToValidate="txtName"
											ErrorMessage="<%= $this->Application->getModule('message')->translate('ITEM_REQUIRED','Product name') %>"
											Display="Dynamic"
											FocusOnError="True"/>
										<com:TCustomValidator ID="val4"
											CssClass="error"
											ControlToValidate="txtName"
											OnServerValidate="uniqueCheck_ServerValidated"
											ErrorMessage="<%= $this->Application->getModule('message')->translate('ITEM_EXISTS','Product name') %>"
											Display="Dynamic"/>
									</div>
								</td>
								<td class="field">                                
									<div class="text">Alias</div>
									<div class="control">
										<com:TTextBox ID="txtAlias" CssClass="textbox" /><br />
										<div class="notice"><%= $this->Application->getModule('message')->translate('AUTO_FIELD') %></div>
									</div>
								</td>
							</tr>
							<tr>
								<td class="field">
									<div class="text">Brand<span>*</span></div>
									<div class="control">
										<com:TDropDownList ID="cboBrandSelector"
											PromptText="Select..."
											PromptValue="0"
											DataTextField="Name"
											DataValueField="ID" /><br />
										<com:TRequiredFieldValidator ID="val7"
											CssClass="error"
											ControlToValidate="cboBrandSelector"
											ErrorMessage="<%= $this->Application->getModule('message')->translate('COMBOBOX_REQUIRED','brand') %>"
											Display="Dynamic"
											InitialValue="0"
											FocusOnError="True"/>
									</div>
								</td>
								<td class="field">                                
									<div class="text">Manufacturer<span>*</span></div>
									<div class="control">
										<com:TDropDownList ID="cboMfSelector"
											PromptText="Select..."
											PromptValue="0"
											DataTextField="Name"
											DataValueField="ID" /><br />
										<com:TRequiredFieldValidator ID="val8"
											CssClass="error"
											ControlToValidate="cboMfSelector"
											ErrorMessage="<%= $this->Application->getModule('message')->translate('COMBOBOX_REQUIRED','manufacturer') %>"
											Display="Dynamic"
											InitialValue="0"
											FocusOnError="True"/>
									</div>
								</td>
							</tr>
							<tr>
								<td class="field">
									<div class="text">Discount</div>
									<div class="control">
										<com:TDropDownList ID="cboDiscountSelector"
											PromptText="None"
											PromptValue="0"
											DataTextField="Name"
											DataValueField="ID" />
									</div>
								</td>
								<td class="field">&nbsp;</td>
							</tr>
							<tr>
								<td class="field">
									<div class="text">Category<span>*</span></div>
									<div class="control">
										<com:TListBox ID="cboCatSelector"
											Width="206px" Height="200px"
											SelectionMode="Multiple"
											DataTextField="Name"
											DataValueField="ID" /><br />
										<com:TRequiredFieldValidator ID="val10"
											CssClass="error"
											ControlToValidate="cboCatSelector"
											ErrorMessage="<%= $this->Application->getModule('message')->translate('COMBOBOX_REQUIRED','category') %>"
											Display="Dynamic"
											FocusOnError="True"/>
									</div>
								</td>
								<td class="field">&nbsp;</td>
							</tr>
							<tr>
								<td class="field" style="padding:5px 0 5px 0;">
									<div class="text paddingtop">Publish</div>
									<div class="control">
										<com:TRadioButtonList ID="radPublish" RepeatDirection="Horizontal">
											<com:TListItem Value="0" Text="No" />
											<com:TListItem Value="1" Text="Yes"  Selected="true" />
										</com:TRadioButtonList>
									</div>
								</td>
								<td class="field" style="padding:5px 0 5px 0;">                             
									<div class="text paddingtop">New Arrival</div>
									<div class="control">
										<com:TRadioButtonList ID="radNewArrival" RepeatDirection="Horizontal">
											<com:TListItem Value="0" Text="No" />
											<com:TListItem Value="1" Text="Yes" Selected="true" />
										</com:TRadioButtonList>
									</div>
								</td>
							</tr>
							<tr>
								<td class="field" style="padding:5px 0 5px 0;">
									<div class="text paddingtop">Best Seller</div>
									<div class="control">
										<com:TRadioButtonList ID="radBestSeller" RepeatDirection="Horizontal">
											<com:TListItem Value="0" Text="No" Selected="true" />
											<com:TListItem Value="1" Text="Yes" />
										</com:TRadioButtonList>
									</div>
								</td>
								<td class="field" style="padding:5px 0 5px 0;">                             
									<div class="text paddingtop">Hot Deal</div>
									<div class="control">
										<com:TRadioButtonList ID="radHotDeal" RepeatDirection="Horizontal">
											<com:TListItem Value="0" Text="No" Selected="true" />
											<com:TListItem Value="1" Text="Yes"/>
										</com:TRadioButtonList>
									</div>
								</td>
							</tr>
							<tr>
								<td class="field">
									<div class="text">Image</div>
									<div class="control">
										<com:TFileUpload ID="fuImage" Width="208px" /><br />
										<com:TCustomValidator ID="val11"
											ControlToValidate="fuImage"
											OnServerValidate="checkImageExtension_ServerValidated"
											ErrorMessage="<%= $this->Application->getModule('message')->translate('IMAGE_INVALID',implode(",",TPropertyValue::ensureArray($this->Application->Parameters["AVAILABLE_IMAGES"]))) %>"
											Display="Dynamic" 
											FocusOnError="True"/>
									</div>
								</td>
								<td class="field">                                
									<div class="text">Thumbnail</div>
									<div class="control">
										<com:TFileUpload ID="fuThumb"  Width="208px" /><br />
										<com:TCustomValidator ID="val12"
											ControlToValidate="fuImage"
											OnServerValidate="checkImageExtension_ServerValidated"
											ErrorMessage="<%= $this->Application->getModule('message')->translate('IMAGE_INVALID',implode(",",TPropertyValue::ensureArray($this->Application->Parameters["AVAILABLE_IMAGES"]))) %>"
											Display="Dynamic" 
											FocusOnError="True"/>
									</div>
								</td>
							</tr>
							<tr>
								<td class="field" colspan="2">
									<div class="text">Properties</div>
									<div class="control">
										<com:TRepeater ID="rptProperty" ItemRenderer="Application.pages.admincp.PropertyTemplate" />
										<com:TButton ID="btnAddProperty" OnClick="btnAddProperty_Clicked" CausesValidation="false" CssClass="btn_smallreset" />
										<div class="notice"><%= $this->Application->getModule('message')->translate('MAKE_SURE_FILL_DATA') %></div>
									</div>
								</td>
							</tr>
							<tr>
								<td class="field" colspan="2">
									<div class="text">Brief Description</div>
									<div class="control">
										<com:TTextBox ID="txtBrief" TextMode="MultiLine" CssClass="textbox" Width="630px" Height="50px"/>
                                    </div>
                                </td>
                            </tr>
						</table>
						<div class="field" style="float:none;height:auto;">
							<div class="text">Description</div>
							<div class="control" style="height:auto;float:none;width:auto;padding-bottom:10px;">
								<com:THtmlArea ID="txtDesc" Width="auto" Height="250px">
									<prop:Options>
										theme : "advanced",
										skin: "o2k7",
										plugins : "style,layer,table,save,advhr,advlink,emotions,iespell,insertdatetime,preview,media,searchreplace,print,contextmenu,paste,directionality,fullscreen,noneditable,visualchars,nonbreaking,xhtmlxtras",
										theme_advanced_buttons1_add_before : "save,newdocument,separator,styleselect",
										theme_advanced_buttons1_add : "separator,insertdate,inserttime,preview,separator,advsearchreplace",
										theme_advanced_buttons2_add_before: "cut,copy,paste,pastetext,pasteword,separator,search,replace,separator",
										theme_advanced_buttons3 : "tablecontrols,separator,emotions,iespell,media,advhr,separator,print,separator,ltr,rtl,separator,fullscreen",
										theme_advanced_buttons4 : "insertlayer,moveforward,movebackward,absolute,|,styleprops,|,cite,abbr,acronym,del,ins,|,visualchars,nonbreaking",
										theme_advanced_toolbar_location : "top",
										theme_advanced_toolbar_align : "left",
										theme_advanced_path_location : "bottom",
										content_css : "example_full.css",
										plugin_insertdate_dateFormat : "%Y-%m-%d",
										plugin_insertdate_timeFormat : "%H:%M:%S",
										extended_valid_elements : "hr[class|width|size|noshade],font[face|size|color|style],span[class|align|style]",
										external_link_list_url : "example_link_list.js",
										external_image_list_url : "example_image_list.js",
										flash_external_list_url : "example_flash_list.js",
										media_external_list_url : "example_media_list.js",
										file_browser_callback : "tinyBrowser",
										theme_advanced_resize_horizontal : false,
										theme_advanced_resizing : false,
										nonbreaking_force_tab : true,
										apply_source_formatting : true,
										relative_urls : false,
										document_base_url : "<%= $this->Request->getBaseUrl($this->Request->IsSecureConnection) %>"
									</prop:Options>
								</com:THtmlArea>  
							</div>
						</div>
						<div class="field" style="border:none;margin-bottom:0;">
							<div class="text">&nbsp;</div>
							<div class="control">
								<com:TButton ID="btnSubmit" CssClass="<%= ($this->Item && $this->Item->ID > 0) ? 'btn_edit' : 'btn_addnew' %>" OnClick="btnSubmit_Clicked" />
								<com:TButton ID="btnAddMore" CssClass="btn_addmore" OnClick="btnAddMore_Clicked" />
								<com:TButton CausesValidation="false" ButtonType="Reset" CssClass="btn_reset" />
								<com:TButton CausesValidation="false" ButtonType="Button" CssClass="btn_cancel" Attributes.onclick="if(!confirm('<%= $this->Application->getModule('message')->translate('CANCEL_CONFIRM') %>')) return false; else document.location.href = '<%= $this->Service->ConstructUrl('admincp.ProductManager') %>'" />
							</div>
						</div>
					</div>
				</com:TPanel>
				<!-- Form sample: END -->
			</td>
		</tr>
	</table>
</com:TContent>
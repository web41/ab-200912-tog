<%@ MasterClass="Application.shared.AdminMaster" Theme="general" %>
<com:TContent ID="title">
	Administration :: Product Manager
</com:TContent>
<com:TContent ID="content">
	<table border="0" cellpadding="0" cellspacing="0" width="100%" height="100%">
		<tr>
			<td class="left_col" style="background:#2e2e2e;">
				<com:Application.shared.CalendarPane />
				<com:Application.shared.AdminLeftMenu />
				<com:Application.shared.StatisticsPane />
			</td>	
			<td class="main_col">
				<!-- Control box -->
				<div class="general_controlbox">
					<div class="top"><div><div><!-- --></div></div></div>
					<div class="center">
						<com:TButton ID="btnDelete" CssClass="btn_delete" OnClick="btnDelete_Clicked" Attributes.onclick="if(_chk.totalSelected > 0) { if(!confirm('<%= $this->Application->getModule('message')->translate('DELETE_ALL_CONFIRM','product') %>')) return false; } else { alert('<%= $this->Application->getModule('message')->translate('SELECT_ITEM_REQUIRED','product') %>'); return false; }" />
						<com:TButton ID="btnUncheck" ButtonType="Button" CssClass="btn_uncheck" Attributes.onclick="_chk.toogle(this,false)" />
						<com:TButton ID="btnCheck" ButtonType="Button" CssClass="btn_checkall" Attributes.onclick="_chk.toogle(this,true)" />
						<com:TButton ID="btnPublish" CssClass="btn_publish" OnClick="btnPublish_Clicked" />
						<com:TButton ID="btnUnpublish" CssClass="btn_unpublish" OnClick="btnUnpublish_Clicked" />
						<com:TButton ID="btnEdit" CssClass="btn_edit" OnClick="btnEdit_Clicked" Attributes.onclick="if(_chk.totalSelected > 0) {} else { alert('<%= $this->Application->getModule('message')->translate('SELECT_ITEM_REQUIRED','product') %>'); return false; }" />
						<com:TButton ID="btnAdd" ButtonType="Button" CssClass="btn_addnew" Attributes.onclick="document.location.href = '<%= $this->Service->ConstructUrl('admincp.ProductForm') %>'" />
						<h2>Action</h2>
					</div>
					<div class="bottom"><div><div><!-- --></div></div></div>
				</div>
				<!-- Control box: END -->
				<com:Application.shared.AdminNotice ID="Notice" />
				<!-- Main box -->
				<div class="main_box">
					<div class="title"><div><div>
						<h2>Product List</h2>
						<div style="float:right;height:26px;padding:7px 5px 0 0;">
							
							<com:TButton ID="btnSearchReset" CssClass="btn_smallreset" CausesValidation="false" ValidationGroup="filter" OnClick="btnSearchReset_Clicked"/>
							<com:TButton ID="btnSearch" CssClass="btn_smallenter" ValidationGroup="filter" OnClick="btnSearch_Clicked"/>
							<com:TRequiredFieldValidator ID="val1"
								ControlToValidate="txtSearchText"
								ErrorMessage="*"
								Display="Dynamic"
								FocusOnError="true"
								InitialValue="Filter by ID or Name"
								ValidationGroup="filter" Style="margin:0;padding:0;float:right;"/>
							<com:TTextBox ID="txtSearchText" CssClass="textbox" Text="Filter by ID or Name" Attributes.onfocus="this.select()" />
							<com:TDropDownList ID="cboMfSelector"
								AutoPostBack="true"
								OnSelectedIndexChanged="cboMfSelector_SelectedIndexChanged"
								PromptText="All" 
								PromptValue="0"
								DataTextField="Name"
								DataValueField="ID" />
							<com:TDropDownList ID="cboBrandSelector"
								AutoPostBack="true" Style="font-size:11px; padding-top:5px;"
								OnSelectedIndexChanged="cboBrandSelector_SelectedIndexChanged"
								PromptText="All"
								PromptValue="0"
								DataTextField="Name"
								DataValueField="ID" />
							<com:TDropDownList ID="cboCatSelector"
								AutoPostBack="true" Style="font-size:11px; padding-top:5px;"
								OnSelectedIndexChanged="cboCatSelector_SelectedIndexChanged"
								PromptText="All"
								PromptValue="0"
								DataTextField="Name"
								DataValueField="ID" />
						</div>
					</div></div></div>
					<div class="content nopadding">
						<com:TOGDataGrid ID="ItemList"
							OnItemCreated="list_ItemCreated"
							OnItemCommand="list_ItemCommand">
							<com:TTemplateColumn HeaderStyle.Width="4%" HeaderText="#">
								<prop:ItemTemplate>
									<com:TLabel Text="<%# $this->Parent->ItemIndex + 1 + ($this->Page->CurrentPage-1)*$this->Parent->Parent->PageSize %>" />
								</prop:ItemTemplate>
							</com:TTemplateColumn>
							<com:TTemplateColumn HeaderStyle.Width="5%">
								<prop:HeaderTemplate>
									<a href="<%# $this->Page->populateSortUrl(2,(($this->Page->SortBy==2 && $this->Page->SortType=='asc') ? 'desc' : 'asc'),$this->Page->SearchText,$this->Page->BrandID,$this->Page->MfID,$this->Page->CatID) %>">Supplier
										<com:TImage Width="10px" Height="10px" ImageUrl="<%# $this->Page->Theme->BaseUrl %>/images/icon_<%# ($this->Page->SortType=='asc') ? 'down' : 'up' %>.png" Visible="<%# $this->Page->SortBy==2 %>" />
									</a>
								</prop:HeaderTemplate>
								<prop:ItemTemplate>
									<com:TLabel Text="<%# $this->Parent->Data->Manufacturer->Name %>" />
								</prop:ItemTemplate>
							</com:TTemplateColumn>
							<com:TTemplateColumn HeaderStyle.CssClass="align_left">
								<prop:HeaderTemplate>
									<a href="<%# $this->Page->populateSortUrl(1,(($this->Page->SortBy==1 && $this->Page->SortType=='asc') ? 'desc' : 'asc'),$this->Page->SearchText,$this->Page->BrandID,$this->Page->MfID,$this->Page->CatID) %>">Name
										<com:TImage Width="10px" Height="10px" ImageUrl="<%# $this->Page->Theme->BaseUrl %>/images/icon_<%# ($this->Page->SortType=='asc') ? 'down' : 'up' %>.png" Visible="<%# $this->Page->SortBy==1 %>" />
									</a>
								</prop:HeaderTemplate>
								<prop:ItemTemplate>
									<com:THyperLink Text="<%# $this->Parent->Data->Name %>" NavigateUrl='<%# $this->Service->ConstructUrl("admincp.ProductForm",array("id"=>$this->Parent->Data->ID,"alias"=>$this->Parent->Data->Alias,"refUrl"=>urlencode($this->Page->populateSortUrl($this->Page->SortBy,$this->Page->SortType,"",$this->Page->BrandID,$this->Page->MfID,$this->Page->CatID,false)))) %>' />
								</prop:ItemTemplate>
							</com:TTemplateColumn>
							<com:TTemplateColumn HeaderStyle.Width="15%" ItemStyle.CustomStyle="text-align:left" HeaderStyle.CssClass="align_left">
								<prop:HeaderTemplate>
									<a href="<%# $this->Page->populateSortUrl(3,(($this->Page->SortBy==3 && $this->Page->SortType=='asc') ? 'desc' : 'asc'),$this->Page->SearchText,$this->Page->BrandID,$this->Page->MfID,$this->Page->CatID) %>">Brand
										<com:TImage Width="10px" Height="10px" ImageUrl="<%# $this->Page->Theme->BaseUrl %>/images/icon_<%# ($this->Page->SortType=='asc') ? 'down' : 'up' %>.png" Visible="<%# $this->Page->SortBy==3 %>" />
									</a>
								</prop:HeaderTemplate>
								<prop:ItemTemplate>
									<com:TLabel Text="<%# $this->Parent->Data->Brand->Name %>" />
								</prop:ItemTemplate>
							</com:TTemplateColumn>
							<com:TTemplateColumn HeaderStyle.Width="15%" HeaderText="Categories" ItemStyle.CustomStyle="text-align:left" HeaderStyle.CssClass="align_left">
								<prop:ItemTemplate>
									<com:TLabel Text="<%# $this->Parent->Data->CategoryNames %>" />
								</prop:ItemTemplate>
							</com:TTemplateColumn>
                            <com:TTemplateColumn ID="colPrice" HeaderStyle.Width="15%" ItemStyle.CustomStyle="text-align:left" HeaderStyle.CssClass="align_left">
                                <prop:HeaderTemplate>
                                    <com:TImageButton ImageUrl="<%# $this->Page->Theme->BaseUrl %>/images/icon_success.png" CommandName="price_save" />Price
                                </prop:HeaderTemplate>
								<prop:ItemTemplate>
									<com:TDataList ID="datProperties">
                                        <prop:ItemTemplate>
                                        <label style="float:left;text-align:left;"><%# $this->Data->Name %></label><br />
                                        <com:TTextBox ID="txtPrice" Width="60px" Text="<%# number_format($this->Data->Price,2) %>" Style="float:left;"  />
                                        <com:THiddenField ID="valID" Value="<%# $this->Data->ID %>" />
                                        </prop:ItemTemplate>
                                    </com:TDataList>
								</prop:ItemTemplate>
							</com:TTemplateColumn>
							<com:TTemplateColumn HeaderStyle.Width="7%">
								<prop:HeaderTemplate>
									<a href="<%# $this->Page->populateSortUrl(5,(($this->Page->SortBy==5 && $this->Page->SortType=='asc') ? 'desc' : 'asc'),$this->Page->SearchText,$this->Page->BrandID,$this->Page->MfID,$this->Page->CatID) %>">Last Update
										<com:TImage Width="10px" Height="10px" ImageUrl="<%# $this->Page->Theme->BaseUrl %>/images/icon_<%# ($this->Page->SortType=='asc') ? 'down' : 'up' %>.png" Visible="<%# $this->Page->SortBy==5 %>" />
									</a>
								</prop:HeaderTemplate>
								<prop:ItemTemplate>
									<com:TLabel Text="<%# ($this->Parent->Data && $this->Parent->Data->ModifyDate>0) ? date('d/m/Y',$this->Parent->Data->ModifyDate) : '--' %>" />
								</prop:ItemTemplate>
							</com:TTemplateColumn>
							<com:TTemplateColumn HeaderText="Published" HeaderStyle.Width="7%">
								<prop:ItemTemplate>
									<com:TImageButton ImageUrl="<%# $this->Page->Theme->BaseUrl %>/images/icon_<%# ($this->Parent->Data->IsPublished) ? 'tick' : 'stop' %>.png" CommandName="publish" />
								</prop:ItemTemplate>
							</com:TTemplateColumn>
							<com:TTemplateColumn ID="colOrder" HeaderStyle.Width="7%" ItemStyle.CustomStyle="text-align:left">
								<prop:HeaderTemplate>
									<com:TImageButton ImageUrl="<%# $this->Page->Theme->BaseUrl %>/images/icon_success.png" CommandName="order_save" />
									<a href="<%# $this->Page->populateSortUrl(6,(($this->Page->SortBy==6 && $this->Page->SortType=='asc') ? 'desc' : 'asc'),$this->Page->SearchText,$this->Page->BrandID,$this->Page->MfID,$this->Page->CatID) %>">Order
										<com:TImage Width="10px" Height="10px" ImageUrl="<%# $this->Page->Theme->BaseUrl %>/images/icon_<%# ($this->Page->SortType=='asc') ? 'down' : 'up' %>.png" Visible="<%# $this->Page->SortBy==6 %>" />
									</a>
								</prop:HeaderTemplate>
								<prop:ItemTemplate>
									<com:TTextBox ID="txtOrder" Width="20px" Text="<%= $this->Parent->Data->Ordering %>" />
									<com:TImageButton ImageURL="<%= $this->Page->Theme->BaseUrl %>/images/icon_up.png"
										  AlternateText="Up"
										  BorderWidth="0"
										  CommandName="order_up"
										  Visible="<%= $this->Parent->Data->Ordering > 1 %>" />
									<com:TImageButton ImageURL="<%= $this->Page->Theme->BaseUrl %>/images/icon_down.png"
										  AlternateText="Up"
										  BorderWidth="0"
										  CommandName="order_down"
										  Visible="<%= $this->Parent->Data->Ordering < $this->Parent->Parent->VirtualItemCount %>"/>
								</prop:ItemTemplate>
							</com:TTemplateColumn>
							<com:TTemplateColumn ID="colID" HeaderStyle.Width="4%">
								<prop:HeaderTemplate>
									<a href="<%# $this->Page->populateSortUrl(0,(($this->Page->SortBy==0 && $this->Page->SortType=='asc') ? 'desc' : 'asc'),$this->Page->SearchText,$this->Page->BrandID,$this->Page->MfID,$this->Page->CatID) %>">ID
										<com:TImage Width="10px" Height="10px" ImageUrl="<%# $this->Page->Theme->BaseUrl %>/images/icon_<%# ($this->Page->SortType=='asc') ? 'down' : 'up' %>.png" Visible="<%# $this->Page->SortBy==0 %>" />
									</a>
								</prop:HeaderTemplate>
								<prop:ItemTemplate>
									<com:TLabel ID="lblItemID" Text="<%# $this->Parent->Data->ID %>" />
								</prop:ItemTemplate>
							</com:TTemplateColumn>
							<com:TButtonColumn ID="colDeleteButton" HeaderStyle.Width="4%" ButtonType="ImageButton" ImageUrl="<%= $this->Page->Theme->BaseUrl %>/images/icon_minus.png" CommandName="delete" />
							<com:TTemplateColumn ID="colCheckBox" HeaderStyle.Width="4%">
								<prop:ItemTemplate>
									<com:TCheckBox ID="chkItem" Attributes.onclick="_chk.toogle(this,this.checked)" />
								</prop:ItemTemplate>
							</com:TTemplateColumn>
							<com:TBoundColumn ID="colAlias" DataField="Alias" Visible="false" />
						</com:TOGDataGrid>
						<div class="table_footer">
							<com:PPager PageID="p" ControlToPaginate="ItemList" PageButtonCount="5" AutoHide="true" CssClass="table_paging" TextCssClass="text" ActivePageCssClass="active" />
						</div>
					</div>
				</div>
				<!-- Main box: END -->
				<!-- Control box -->
				<div class="general_controlbox" style="margin-top:-5px;">
					<div class="top"><div><div><!-- --></div></div></div>
					<div class="center">
						<com:TButton ID="btnDelete2" CssClass="btn_delete" OnClick="btnDelete_Clicked" Attributes.onclick="if(_chk.totalSelected > 0) { if(!confirm('<%= $this->Application->getModule('message')->translate('DELETE_ALL_CONFIRM','product') %>')) return false; } else { alert('<%= $this->Application->getModule('message')->translate('SELECT_ITEM_REQUIRED','product') %>'); return false; }" />
						<com:TButton ID="btnUncheck2" ButtonType="Button" CssClass="btn_uncheck" Attributes.onclick="_chk.toogle(this,false)" />
						<com:TButton ID="btnCheck2" ButtonType="Button" CssClass="btn_checkall" Attributes.onclick="_chk.toogle(this,true)" />
						<com:TButton ID="btnPublish2" CssClass="btn_publish" OnClick="btnPublish_Clicked" />
						<com:TButton ID="btnUnpublish2" CssClass="btn_unpublish" OnClick="btnUnpublish_Clicked" />
						<com:TButton ID="btnEdit2" CssClass="btn_edit" OnClick="btnEdit_Clicked" Attributes.onclick="if(_chk.totalSelected > 0) {} else { alert('<%= $this->Application->getModule('message')->translate('SELECT_ITEM_REQUIRED','product') %>'); return false; }" />
						<com:TButton ID="btnAdd2" ButtonType="Button" CssClass="btn_addnew" Attributes.onclick="document.location.href = '<%= $this->Service->ConstructUrl('admincp.ProductForm') %>'" />
						<h2>Action</h2>
					</div>
					<div class="bottom"><div><div><!-- --></div></div></div>
				</div>
				<!-- Control box: END -->
			</td>
		</tr>
	</table>
	<script type="text/javascript">
		var _chk = new CheckBoxGroup();
		_chk.setMasterBehavior("all");
		var _form = document.forms['<%= $this->Form->ClientID %>'];
		for(i=0;i<_form.length;i++)
		{
			if (_form[i].type == 'checkbox')
				_chk.addToGroup(_form[i].name);
		}
	</script>
</com:TContent>
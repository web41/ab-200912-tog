				</div>
				<div class="action">
					<a href="">Edit</a> | <a href="">Remove</a>
				</div>
			</div-->
			<!-- Address content: END -->
			<div style="margin:5px 0 0 10px;"><b><com:THyperLink ID="lnkAddBilling" NavigateUrl="<%= $this->Service->ConstructUrl('shop.account.addresses.AddressForm') %>" Text="Add New" /></b></div>
		</div>

		<div class="address_container">
			<!-- Address title -->
			<div class="address_title" style="margin:0;">
				<div class="adr_item">Shipping Addresses</div>
				<div class="action">Action</div>
			</div>
			<!-- Address title: END -->
			<com:TRepeater ID="rptShipping" OnItemCommand="RepeaterItemCommand">
				<prop:ItemTemplate>
					<!-- Address content -->
					<div class="address_item">
						<div class="adr_item">
							<%# $this->Data ? $this->Data->Title." ".$this->Data->FirstName." ".$this->Data->LastName : "" %><br />
							<%# $this->Data ? $this->Data->Address1.(strlen($this->Data->Address2)>0?", ".$this->Data->Address2:"").", ".$this->Data->City.", ".$this->Data->State." ".$this->Data->ZipCode.", ".$this->Data->Country->Name : "" %><br />
							<%# $this->Data ? "Phone: ".$this->Data->Phone1.", Fax: ".$this->Data->Fax : "" %><br />
						</div>
						<div class="action">
							<com:TLinkButton Text="<%# $this->Data && $this->Data->IsDefault ? 'Default' : 'Set as default' %>" CommandName="set-default" Enabled="<%# $this->Data ? !$this->Data->IsDefault : true %>" /> | 
							<a href="<%= $this->Data ? $this->Service->ConstructUrl('shop.account.addresses.AddressForm',array("id"=>$this->Data->ID,"alias"=>$this->Data->Alias)) : "#" %>">Edit</a> | 
							<com:TLinkButton Text="Remove" CommandName="delete" Attributes.onclick="if(!confirm('<%# $this->Application->getModule('message')->translate('DELETE_CONFIRM','address','') %>')) return false;" />
							<com:THiddenField ID="txtID" Value="<%# $this->Data ? $this->Data->ID : 0 %>" />
						</div>
					</div>
					<!-- Address content: END -->
				</prop:ItemTemplate>
			</com:TRepeater>
